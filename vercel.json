{
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "devCommand": "vite --port $PORT",
  "installCommand": "npm install",
  "framework": null,

  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/creators",
      "destination": "/index.html"
    },
    {
      "source": "/manage",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/crons/verify_intents",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "api/**/*.{js,ts}": {
      "maxDuration": 300
    }
  }
}
